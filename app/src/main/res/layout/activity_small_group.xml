<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.course.edmodo_203898309_305186108.gruops.SmallGroupActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvClassName"
            android:layout_width="334dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/whiteColor"
            android:textSize="25dp" />

        <Button
            android:id="@+id/ButSet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_srtting"/>

    </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/main_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:labelVisibilityMode="labeled"
        android:visibility="visible"
        app:itemTextColor="@color/whiteColor"
        android:background="@color/colorPrimary"
        app:menu="@menu/small_group_menu" />

    <FrameLayout
        android:id="@+id/freg_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"

        ></FrameLayout>


</LinearLayout>
